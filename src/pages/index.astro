---
import Formulario from "@components/Formulario.astro";
import Layout from "@layouts/Layout.astro";
import { IVA_VALUES } from "@utils/const";

let year = IVA_VALUES[0].anio;
let iva = IVA_VALUES[0].value;
---

<Layout
  title="Boleteapp - Home"
  description="Calcula tus boletas de honorarios"
>
  <main
    class="relative flex size-full min-h-screen flex-col bg-[#f1ecc3] group/design-root overflow-x-hidden justify-center items-center py-10"
  >
    <div class="flex flex-col gap-4 items-center">
      <h1 class="text-[#57837b] text-4xl font-bold">BOLETEAPP</h1>
      <p class="text-[#515e63]">
        Calcula tus Boletas de Honorarios. Actualizado a la Ley 21.133 que
        aumenta gradualmente la retención de impuestos.
      </p>
      <span class="bg-[#57837b] text-[#f1ecc3] rounded-md p-3 w-fit">
        Tasa Retención Año <span id="yearSpan">{year}</span>: <span id="ivaSpan"
          >{iva}</span
        >%
      </span>
    </div>
    <Formulario />
  </main>
</Layout>
