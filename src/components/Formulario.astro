---
import { IVA_VALUES } from "@utils/const";
---

<div
  class="layout-content-container flex flex-col w-[512px] py-5 max-w-[960px] flex-1"
>
  <form id="form" class="flex flex-col max-w-[480px]">
    <div>
      <div class="flex flex-wrap items-end gap-4 px-4 py-3">
        <label class="flex flex-col min-w-40 flex-1">
          <select
            id="years"
            class="form-input w-full resize-none overflow-hidden rounded-xl text-[#1C160C] outline-none focus:ring-0 border-none bg-[#F4EFE6] h-14 placeholder:text-[#57837b] p-4 text-base font-normal"
            required
          >
            {
              IVA_VALUES.map(({ anio, value }) => (
                <option value={value}>{anio}</option>
              ))
            }
            }
          </select>
        </label>
      </div>
      <div class="flex max-w-[480px] flex-wrap items-end gap-4 px-4 py-3">
        <label class="flex flex-col min-w-40 flex-1">
          <input
            id="inputPrice"
            type="text"
            placeholder="Monto a pagar"
            class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-[#1C160C] focus:outline-0 focus:ring-0 border-none bg-[#F4EFE6] focus:border-none h-14 placeholder:text-[#57837b] p-4 text-base font-normal leading-normal"
            value=""
            oninput="this.value = this.value.replace(/[^0-9]/g, '');"
            required
          />
        </label>
      </div>
    </div>
    <div class="flex px-4 py-3 justify-end">
      <button
        class="flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-xl h-10 px-4 bg-[#515e63] text-[#FFFFFF] text-sm font-bold leading-normal tracking-[0.015em]"
      >
        <span class="truncate">Calcular</span>
      </button>
    </div>
  </form>
  <div id="boxResult" class="opacity-0 transition-all duration-500">
    <h3
      class="text-[#1C160C] text-lg font-bold leading-tight tracking-[-0.015em] px-4 pb-2 pt-4"
    >
      Resultado
    </h3>
    <div class="p-4">
      <div class="flex justify-between gap-x-6 py-2">
        <p class="text-[#57837b] text-sm font-normal leading-normal">
          Monto neto
        </p>
        <p
          class="text-[#1C160C] text-sm font-normal leading-normal text-right"
          id="textLiquido"
        >
        </p>
      </div>
      <div class="flex justify-between gap-x-6 py-2">
        <p class="text-[#57837b] text-sm font-normal leading-normal">
          Pago recibido
        </p>
        <p
          class="text-[#1C160C] text-sm font-normal leading-normal text-right"
          id="textPago"
        >
        </p>
      </div>
      <div class="flex justify-between gap-x-6 py-2">
        <p class="text-[#57837b] text-sm font-normal leading-normal">
          Retención SII
        </p>
        <p
          class="text-[#1C160C] text-sm font-normal leading-normal text-right"
          id="textRetencion"
        >
        </p>
      </div>
    </div>
  </div>
</div>
<script>
  import { formatPriceCLP } from "@utils/functions";

  document.addEventListener("DOMContentLoaded", () => {
    const $form = document.querySelector("form");

    if ($form) {
      $form.addEventListener("submit", (e) => {
        e.preventDefault();

        const $ivaElement = document.getElementById(
          "years"
        ) as HTMLSelectElement | null;
        const $inputPriceElement = document.getElementById(
          "inputPrice"
        ) as HTMLInputElement | null;

        // Verificar que los elementos existan
        if ($ivaElement && $inputPriceElement) {
          const $iva = parseFloat($ivaElement.value);
          const $inputPrice = parseFloat($inputPriceElement.value);

          if (!isNaN($iva) && !isNaN($inputPrice)) {
            // Obtener liquido
            const liquido = $inputPrice / (1 - $iva / 100);

            // Obtener retencion
            const retencion = liquido - $inputPrice;

            const $textLiquido = document.getElementById("textLiquido");
            const $textPago = document.getElementById("textPago");
            const $textRetencion = document.getElementById("textRetencion");

            if ($textLiquido) {
              $textLiquido.textContent = formatPriceCLP(
                parseFloat(liquido.toFixed(0))
              );
            }
            if ($textPago) {
              $textPago.textContent = formatPriceCLP(
                parseFloat($inputPrice.toFixed(0))
              );
            }
            if ($textRetencion) {
              $textRetencion.textContent = formatPriceCLP(
                parseFloat(retencion.toFixed(0))
              );
            }

            const $boxResult = document.getElementById("boxResult");
            $boxResult?.classList.add("opacity-100");
          } else {
            console.error("Por favor ingresa valores numéricos válidos.");
          }
        }
      });
    }
  });
</script>
